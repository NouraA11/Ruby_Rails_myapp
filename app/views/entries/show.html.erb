<% content_for :title do %>
  <%= @entry.meal_type %> &ndash; <%= DateTime.now.to_formatted_s(:nice_date_format) %>
<% end %>

<div class="columns mt-6 is-centered">
  <div class="column is-one-third">
    <nav class="panel is-link">
    <%= render @entry %>
    </nav>

    <div class="columns is-mobile">
      <div class="column">
        <%= link_to "Edit", edit_entry_path(@entry), class:"button is-gray"%>
        <%= link_to "Delete", @entry, data: {turbo_method: :delete, turbo_confirm: 'Are you sure?'}, class: "button is-gray" %>
      </div>
    </div>
  </div>
</div>
